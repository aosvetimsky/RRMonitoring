@model RRMonitoring.Identity.Api.ViewModels.ResetPasswordViewModel;

<div class="container">
    <div class="card">
        <img class="card__logo" src="~/assets/images/logo.png" alt="RedRock Pool">

        <div class="card__title">
            Введите новый пароль
        </div>

        <div>
            Пароль должен содержать латинские буквы верхнего и нижнего регистра и цифры. Минимум 8 символов
        </div>

        <form id="form" method="post" novalidate>
            @if (Model?.ErrorList?.Any() == true)
            {
                <div class="card__form-error-messages">
                    @foreach (var error in Model.ErrorList)
                    {
                        <div class="card__form-error-message">@error</div>
                    }
                </div>
            }

            <label>
                <input type="password" id="newPassword" name="NewPassword" placeholder="Введите пароль" required/>
                <button type='button' data-field="newPassword" class='password-visibility'>
                    <svg>
                        <use href="/identity/assets/images/sprite.svg#eye-closed"></use>
                    </svg>
                </button>
                <div class="validation-error-message"></div>
            </label>

            <label>
                <input type="password" id="confirmedNewPassword" name="ConfirmedNewPassword" placeholder="Повторите пароль" required/>
                <button type='button' data-field="confirmedNewPassword" class='password-visibility'>
                    <svg>
                        <use href="/identity/assets/images/sprite.svg#eye-closed"></use>
                    </svg>
                </button>
                <div class="validation-error-message"></div>
            </label>

            <button type="submit" id="submitButton" name="submitButton" disabled>Подтвердить</button>
        </form>
    </div>
</div>
