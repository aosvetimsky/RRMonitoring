@model RRMonitoring.Identity.Api.ViewModels.RegisterViewModel;

<div class="container">
    <div class="card">
        <img class="card__logo" src="~/assets/images/logo.png" alt="RedRock Pool">

        <div class="card__title">
            Регистрация
        </div>

        <form id="form" method="post" novalidate>
            @if (Model?.ErrorList?.Any() == true)
            {
                <div class="card__form-error-messages">
                    @foreach (var error in Model.ErrorList)
                    {
                        <div class="card__form-error-message">@error</div>
                    }
                </div>
            }

            <label>
                <input type="email" id="email" name="Email" placeholder="E-mail" required/>
                <div class="validation-error-message"></div>
            </label>

            <label>
                <input type="text" id="username" name="UserName" placeholder="Имя пользователя" required/>
                <div class="validation-error-message"></div>
            </label>

            <label>
                <input type="password" id="newPassword" name="Password" placeholder="Пароль" required/>
                <button type='button' data-field="newPassword" class='password-visibility'>
                    <svg>
                        <use href="/identity/assets/images/sprite.svg#eye-closed"></use>
                    </svg>
                </button>
                <div class="validation-error-message"></div>
            </label>

            <label>
                <input type="password" id="confirmedNewPassword" name="ConfirmPassword" placeholder="Повторите пароль" required/>
                <button type='button' data-field="confirmedNewPassword" class='password-visibility'>
                    <svg>
                        <use href="/identity/assets/images/sprite.svg#eye-closed"></use>
                    </svg>
                </button>
                <div class="validation-error-message"></div>
            </label>

            <label>
                <input type="text" id="referralCode" name="ReferralCode" placeholder="Реферальный код" value="@Model?.ReferralCode" />
                <div class="validation-error-message"></div>
            </label>

            <label>
	        @Html.CheckBoxFor(model => model.IsTermsConfirmed, new { id = "userAgreement" })
	        <div class="checkbox-image">
                    <svg>
                        <use href="/identity/assets/images/sprite.svg#checked"></use>
                    </svg>
                </div>

                <div>
                    Согласен(а) с <a class="secondary" href="https://google.com" target="_blank">пользовательским соглашением</a> RedRock Pool
                </div>
            </label>

            <button type="submit" id="submitButton" name="submitButton" disabled>Зарегистрироваться</button>
        </form>

        <div class="card__footer">
            <span>Уже есть аккаунт?</span>
            <a href="@Model.LoginUrl" class="secondary">Войти</a>
        </div>
    </div>
</div>
